{
  "name": "microfrontends-with-angular",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "npx jest --passWithNoTests",
    "lint": "ng lint",
    "prettier": "npx prettier --write .",
    "prettier-check": "npx prettier --check .",
    "check": "npm run lint && npm run test && npm run prettier-check",
    "package": "npm run build-lib && npm run npm-pack"
  },
  "jest": {
    "roots": [
      "<rootDir>/projects/train-platform/src",
      "<rootDir>/projects/bookings/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    }
  },
  "dependencies": {
    "@angular/common": "~12.2.16",
    "@angular/compiler": "~12.2.16",
    "@angular/core": "~12.2.16",
    "@angular/forms": "^12.2.16",
    "@angular/platform-browser": "~12.2.16",
    "@angular/platform-browser-dynamic": "~12.2.16",
    "@angular/router": "~12.2.16",
    "@ngneat/hot-toast": "^3.4.3",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-builders/jest": "^10.0.1",
    "@angular-devkit/build-angular": "~12.2.17",
    "@angular/cli": "~12.2.17",
    "@angular/compiler-cli": "~12.2.16",
    "@angular/elements": "^12.2.16",
    "@babel/core": "^7.12.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jest": "^26.6.3",
    "ng-packagr": "^12.2.7",
    "ngx-build-plus": "^12.2.0",
    "prettier": "^2.1.2",
    "protractor": "~7.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5"
  }
}