{
  "name": "microfrontends-with-angular",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "npx jest --passWithNoTests",
    "lint": "ng lint",
    "prettier": "npx prettier --write .",
    "prettier-check": "npx prettier --check .",
    "check": "npm run lint && npm run test && npm run prettier-check",
    "package": "npm run build-lib && npm run npm-pack"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/projects/train-platform/src",
      "<rootDir>/projects/bookings/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    }
  },
  "dependencies": {
    "@angular/common": "~11.1.0",
    "@angular/compiler": "~11.1.0",
    "@angular/core": "~11.1.0",
    "@angular/platform-browser": "~11.1.0",
    "@angular/platform-browser-dynamic": "~11.1.0",
    "@angular/router": "~11.1.0",
    "ngx-elements-router": "^0.1.3",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-builders/jest": "^10.0.1",
    "@angular-devkit/build-angular": "~0.1101.1",
    "@angular/cli": "~11.1.1",
    "@angular/compiler-cli": "~11.1.0",
    "@angular/elements": "^11.1.0",
    "@babel/core": "^7.12.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "ng-packagr": "^11.1.2",
    "ngx-build-plus": "^11.0.0",
    "prettier": "^2.1.2",
    "protractor": "~7.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  }
}
